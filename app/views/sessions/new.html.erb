<div class="content-block clearfix" id="LoginArea">

	<div id="LoginArea_left">
		<h3>myCourse</h3>
		<p>myCourse application allows RMIT staff member to create and vote for the courses.</p>
		<p>You can:
			<ul>
				<li>Create course and upload images</li>
				<li>Create course categories</li>
				<li>Assign course to a location</li>
				<li>Vote for the course you like</li>
			</ul>
		</p>
		
	</div>

	<div id="LoginArea_right">
		<%= # no resource is modified when logging in, so use form_tag() instead of form_for()
		form_tag login_path do  %>
			<h3>Login</h3>
			<h4>Please login to access this system</h4>

			<div class="form-group">
				<%= label_tag :email %>
				<%= text_field_tag :email, "", class: "input-sm form-control" %>
			</div>

			<div class="form-group">
				<%= label_tag :password %>
				<%= password_field_tag :password, "", class: "input-sm form-control" %>
			</div>

			<div class="form-group">
				<%= submit_tag "Log In", class: "btn btn-lg btn-primary" %>
			</div>

			<div class="form-group">
				<%= link_to "Don't have an account? Register", signup_path %>
			</div>

		<% end %>
	</div>

</div><!-- end #LoginArea.block-content -->

<%= form_for(location) do |f| %>
  <div class="form-group">
    <%= f.label :at, "Location" %>
    <%= f.text_field :at, class:"input-sm form-control", placeholder: "New location" %>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-lg btn-success" %>
  </div>
<% end %>

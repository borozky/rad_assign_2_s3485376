<%= content_for :entry_header do %>
<div class="entry-header">
	<div class="container">
		<h2 class="entry-title">All Locations</h2>
	</div>
</div>
<% end %>

<div class="content-block" id="LocationsIndexArea">
  <% if @locations.blank? %>
    <h4>There are no locations available at the moment. Please come back later.</h4>
    <p>
      <%= link_to 'New Location', new_location_path, class:"btn btn-success" if current_user %>
    </p>
  <% else %>
    <p>
    <%= link_to new_location_path, class: "btn btn-sm btn-success" do %>
        <i class="fa fa-plus"></i>&nbsp; Add new location
    <% end if current_user %>
    </p>
    <div class="table-responsive">
        <table class="table">
        <tr>
            <th>Location</th>
            
            <% if current_user %>
              <th>Options</th>
            <% end %>
        </tr>
        <% @locations.each do |location| %>
        <tr>
            <td><%= link_to location.at, location_path(location) %></td>
            <td>
            <%= link_to "Edit location", edit_location_path(location), class: "btn btn-xs btn-info" if current_user %>
            <%= link_to "Remove location", location_path(location), method: :delete, class: "btn btn-xs btn-danger" if current_admin %>
            </td>
        </tr>
        <% end %>
        </table>
    </div>
  <% end %>
</div>

<%= form_for(category) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input-sm form-control",
                            placeholder: "category name"%>
  </div>
  
  <div class="form-group">
    <%= f.submit "Submit", class: "btn btn-lg btn-success" %>
  </div>
<% end %>

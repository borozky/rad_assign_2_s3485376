<p id="notice"><%= notice %></p>

<h1>Courses</h1>


<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Prerequisite</th>
      <th>Locations</th>
      <th>Categories</th>
      <th>Created</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @courses.each do |course| %>
      <tr>
        <td><%= course.name %></td>
        <td><%= course.description %></td>
        <td><%= course.prerequisite %></td>
        <td>
          <%= course.locations.collect { |l| link_to(l.at, l) }.join(",").html_safe %>
        </td>
        <td>
          <%= course.categories.collect { |c| 
              link_to(c.name, c) }.join(",").html_safe 
          %>
        </td>
        <td><%= time_ago_in_words(course.created_at) %></td>
        <td><%= link_to 'Show', course %></td>
        <td><%= link_to 'Edit', edit_course_path(course) if course_editable?(course) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<h2>Coordinators</h2>
<ul>
  <% @coordinators.each do |c| %>
    <li><b><%= c.name %></b> (<%= c.email %>)</li>
  <% end %>
</ul>

<%= link_to 'New Course', new_course_path %>

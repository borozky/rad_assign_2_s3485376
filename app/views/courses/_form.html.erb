<%= form_for(course) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="form-group">
  <%= f.label :description %>
  <%= f.text_area :description, size: "30x10", class: "input-sm form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :prerequisite %>
    <%= f.text_field :prerequisite, class: "input-sm form-control" %>
  </div>

  <div class="form-group">
    <%= f.label :locations %>
    <ul>
      <%= f.collection_check_boxes :location_ids, Location.all, :id, :at do |l| %>
        <li><%= l.check_box %> &nbsp;<%= l.label %></li>
      <% end %>
    </ul>
  </div>

  <div class="form-group">
    <%= f.label :categories%>
    <ul>
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |c| %>
        <li><%= c.check_box %> &nbsp;<%= c.label %></li>
      <% end %>
    </ul>
  </div>

  <div class="form-group">
    <%= f.label :image %><br>
    <%= f.file_field :image %>
    <span class="image-preview-area"><%= image_tag course.image.url if course.image? %></span><br>
  </div>

  <div class="form-group text-right">
    <%= f.submit "Save", class: "btn btn-lg btn-success" %>
  </div>
<% end %>



<!DOCTYPE html>
<html>
  <head>
    <title>RADA2</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <p>
  <b>Locations:</b>
    <% @locations.each do |location| %>
    <%= link_to location.at, locations_path(location) %>
    <% end%>
    <%= link_to "Create new location", new_location_path if current_user %>
  </p>
  <p>
  <b>Categories:</b>
    <% @categories.each do |category| %>
    <%= link_to category.name, categories_path(category) %>
    <% end%>
    <%= link_to "Create new category", new_category_path if current_user %>
  </p>

  <%= link_to "Courses", courses_path %> 
  <%= link_to "Categories", categories_path %> 
  <%= link_to "Locations", locations_path %> 
  <%= link_to "Users", users_path %>
  <% if user_signed_in? %>
    <%= link_to "Logout", logout_url %>
  <% else %>
    <%= link_to "Login", login_url %>
  <% end %>

    <%= yield %>
  </body>
</html>

<% if user.errors.any? %>
<div class="validation-summary">
  <ul>
  <% user.errors.full_messages.each do |message| %>
    <li><%= message %></li>
  <% end %>
  </ul>
</div>
<% end %>

<%= form_for(user) do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, class: "input-sm form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :email %>
    <%= f.email_field :email, class: "input-sm form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :password %>
    <%= f.password_field :password, class: "input-sm form-control" %>
  </div>
  <div class="form-group">
    <%= f.submit "Update Information", class: "btn btn-lg btn-success" %>
  </div>
<% end%>